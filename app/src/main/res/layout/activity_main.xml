<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MainActivity">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.626"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.973">

            <io.github.controlwear.virtual.joystick.android.JoystickView
                android:id="@+id/leftMotorJoystick"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:JV_backgroundColor="#009688"
                app:JV_borderColor="#00796B"
                app:JV_borderWidth="4dp"
                app:JV_buttonColor="#FF6E40"
                app:JV_buttonDirection="vertical"
                app:JV_buttonSizeRatio="20%"
                app:JV_fixedCenter="false" />

            <io.github.controlwear.virtual.joystick.android.JoystickView
                android:id="@+id/allMotorJoystick"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:JV_backgroundColor="#009688"
                app:JV_borderColor="#00796B"
                app:JV_borderWidth="4dp"
                app:JV_buttonColor="#FF6E40"
                app:JV_buttonDirection="vertical"
                app:JV_buttonSizeRatio="20%"
                app:JV_fixedCenter="false" />

            <io.github.controlwear.virtual.joystick.android.JoystickView
                android:id="@+id/rightMotorJoystick"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:JV_backgroundColor="#009688"
                app:JV_borderColor="#00796B"
                app:JV_borderWidth="4dp"
                app:JV_buttonColor="#FF6E40"
                app:JV_buttonDirection="vertical"
                app:JV_buttonSizeRatio="20%"
                app:JV_fixedCenter="false" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>